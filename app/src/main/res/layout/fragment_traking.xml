<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="TrackingViewModel"
            type="com.example.afjtracking.view.fragment.home.viewmodel.TrackingViewModel" />


    </data>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            >

            <ImageView
                android:id="@+id/satelit_id"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                android:background="@drawable/blue_fill__rounded_color"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/satelit_id"
                android:layout_centerInParent="true"

                android:layout_marginTop="20sp"
                android:text="Location Tracker"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_centerInParent="true"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/service_button"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_loc"
                android:layout_alignEnd="@+id/text1"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="13dp"
                android:text="Tracking"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/txt_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Tracking"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnShowMap"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_button"
                android:layout_alignStart="@+id/service_button"
                android:layout_marginTop="44dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:onClick="Map"
                android:text="Show in Map"
                android:textColor="@android:color/white" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnShowMap"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/start_service_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:text="@string/request_location_updates"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/stop_service_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/blue_fill__rounded_color"
                    android:text="@string/remove_location_updates"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

                <FrameLayout
                    android:layout_weight="0.6"
                    android:id="@+id/frame_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btnTracking"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Vehicle Information"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_body_normal_size" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout

                            android:id="@+id/frame_tracking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnTracking"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:text="Tracking Start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body_normal_size" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</layout>
