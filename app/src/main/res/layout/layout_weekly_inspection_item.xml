<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/all_app_bg"
    android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"

            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Created Date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_created_date"

                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"
                android:background="@color/light_grey"
                android:text="Created At"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Inspection Date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_inspection_date"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"

                android:text="Created At"
                android:background="@color/light_grey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Inspection Type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_inspection_type"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"

                android:text="Created At"
                android:background="@color/light_grey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Inspection Status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_inspection_status"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"

                android:text="Created At"
                android:background="@color/light_grey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Vehicle Type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_vehicle_type"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"

                android:text="Created At"
                android:background="@color/light_grey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/container_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Errors"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/txt_error_count"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"

                android:text="0"
                android:background="@color/light_grey"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:weightSum="2">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="0.7"
                android:background="@color/all_app_bg"
                android:text="Action"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body_normal_size"
                android:textStyle="bold" />

            <LinearLayout
                android:background="@color/all_app_bg"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1.3"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:textAllCaps="false"
                    android:id="@+id/btnContinueInspection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/amber"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body_normal_size"
                    android:text="Continue Inspection"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>