<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="LoginViewModel"
            type="com.example.afjtracking.view.activity.viewmodel.LoginViewModel" />


    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            tools:context=".View.MainActivity">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/blue_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:src="@drawable/afj_logo"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="Tracking App"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </FrameLayout>


            <RelativeLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_36sdp"
                android:background="@drawable/blue_border_rounded_cornwe">


                <EditText
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_email"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="E-Mail Address"
                    android:inputType="textEmailAddress"
                    android:padding="17dp"

                    android:text="@={LoginViewModel.EmailAddress}"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/text_body_normal_size" />

                <ImageView
                    android:id="@+id/img_email"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_email" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/blue_border_rounded_cornwe">


                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_pass"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="17dp"
                    android:text="@={LoginViewModel.Password}"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/text_body_normal_size" />


                <ImageView
                    android:id="@+id/img_pass"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_pass" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:visibility="gone">


                <EditText

                    android:id="@+id/txtVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_vehicle"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Enter Vehicle Number"
                    android:inputType="text"
                    android:padding="17dp"
                    android:text="@={LoginViewModel.vrnNumber}"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/text_body_normal_size" />


                <ImageView
                    android:id="@+id/img_vehicle"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/logo" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:gravity="center"
                android:onClick="@{(v) -> LoginViewModel.onClick(v)}"
                android:padding="14dp"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_body_normal_size" />



            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:gravity="center"
                android:onClick="@{(v) -> LoginViewModel.getDeviceDetailDialog(v)}"
                android:padding="14dp"
                android:text="Device Info"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_body_normal_size" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>